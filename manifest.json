{
  "manifest_version": 2,
  "name": "Cheater",
  "version": "1.0",
  "description": "Smart Cheater",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "cheater.png",
    "default_title": "Smart Cheater"
  },
  "commands": {
    "cheat-it": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Send To Chat GPT-4"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
